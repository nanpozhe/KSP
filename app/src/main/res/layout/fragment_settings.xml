<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.SettingsFragment">

    <data>
        <variable
            name="settingsFragment"
            type="com.example.ksp.presentation.ui.SettingsFragment" />
        <variable
            name="viewModel"
            type="com.example.ksp.presentation.viewmodel.SettingsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/account_settings_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_settings"
            android:layout_margin="@dimen/setting_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <Button
            android:id="@+id/edit_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_profile"
            style="@style/Widget.KedahSmartParking.Button.SettingsTextButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/account_settings_label"
            app:layout_constraintVertical_bias="0"/>

        <Button
            android:id="@+id/password_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/password_setting"
            style="@style/Widget.KedahSmartParking.Button.SettingsTextButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edit_profile"
            app:layout_constraintVertical_bias="0"
            android:layout_marginTop="-11dp"/>

        <TextView
            android:id="@+id/app_pref_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_pref"
            android:layout_margin="@dimen/setting_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/password_settings"/>

        <Button
            android:id="@+id/language_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/password_setting"
            style="@style/Widget.KedahSmartParking.Button.SettingsTextButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/app_pref_label"
            app:layout_constraintVertical_bias="0" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/keep_logged_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/keep_logged_in"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:padding="@dimen/setting_margin"
            android:checked="@{()-> viewModel.userKeepLoggedIn.equals(true)}"
            android:onClick="@{()-> settingsFragment.checkUserLoggedIn()}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/language_settings"
            app:layout_constraintVertical_bias="0" />

        <Button
            android:id="@+id/logout_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/log_out"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:layout_marginStart="@dimen/setting_margin"
            android:layout_marginEnd="@dimen/setting_margin"
            android:padding="@dimen/setting_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/keep_logged_in"
            android:onClick="@{() -> settingsFragment.logout()}"/>
        <!--             -->
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.wallet.TopUpMethodFragment">

    <data>
        <variable
            name="viewModel"
            type="com.example.ksp.presentation.viewmodel.TopUpViewModel" />
        <variable
            name="topUpMethodFragment"
            type="com.example.ksp.presentation.ui.wallet.TopUpMethodFragment" />
    </data>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/choose_method_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_top_up_method"
                android:textColor="@color/medium_grey"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingVertical="10dp"
                android:layout_marginTop="@dimen/setting_margin"
                app:layout_constraintStart_toStartOf="@id/choose_method_section"
                app:layout_constraintTop_toTopOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/choose_method_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/setting_margin"
                android:background="@drawable/custom_border"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/choose_method_text">
                <LinearLayout
                    android:id="@+id/method_section_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/setting_margin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/choose_method_section">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/grabpay_logo" />
                    <CheckBox
                        android:id="@+id/method_btn_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="0dp"
                        android:padding="@dimen/setting_margin"
                        android:text="@string/grabpay_method"
                        android:textSize="16dp"
                        android:checked="@{viewModel.method.equals(4)}"
                        android:onClick="@{() -> viewModel.setMethod(4)}"
                        android:textColor="@color/medium_grey"
                        android:layoutDirection="rtl"
                        android:backgroundTint="@color/white" />
                </LinearLayout>
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/method_section_1"/>
                <LinearLayout
                    android:id="@+id/method_section_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/setting_margin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/method_section_1">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:scaleY="1.2"
                        android:scaleX="1.2"
                        android:src="@drawable/touch_n_go_ewallet" />
                    <CheckBox
                        android:id="@+id/method_btn_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="0dp"
                        android:padding="@dimen/setting_margin"
                        android:text="@string/tng_method"
                        android:textSize="16dp"
                        android:checked="@{viewModel.method.equals(1)}"
                        android:onClick="@{() -> viewModel.setMethod(1)}"
                        android:textColor="@color/medium_grey"
                        android:layoutDirection="rtl"
                        android:backgroundTint="@color/white" />
                </LinearLayout>
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/method_section_2"/>
                <LinearLayout
                    android:id="@+id/method_section_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/setting_margin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/method_section_2">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:scaleY="1.1"
                        android:scaleX="1.1"
                        android:src="@drawable/shopee_pay_logo" />
                    <CheckBox
                        android:id="@+id/method_btn_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="0dp"
                        android:padding="@dimen/setting_margin"
                        android:text="@string/shopeepay_method"
                        android:textSize="16dp"
                        android:checked="@{viewModel.method.equals(5)}"
                        android:onClick="@{() -> viewModel.setMethod(5)}"
                        android:textColor="@color/medium_grey"
                        android:layoutDirection="rtl"
                        android:backgroundTint="@color/white" />
                </LinearLayout>
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/method_section_3"/>
                <LinearLayout
                    android:id="@+id/method_section_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/setting_margin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/method_section_3">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/fpx_logo" />
                    <CheckBox
                        android:id="@+id/method_btn_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="0dp"
                        android:padding="@dimen/setting_margin"
                        android:text="@string/fpx_method"
                        android:textSize="16dp"
                        android:checked="@{viewModel.method.equals(3)}"
                        android:onClick="@{() -> viewModel.setMethod(3)}"
                        android:textColor="@color/medium_grey"
                        android:layoutDirection="rtl"
                        android:backgroundTint="@color/white" />
                </LinearLayout>
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/method_section_4"/>
                <LinearLayout
                    android:id="@+id/method_section_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/setting_margin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/method_section_4">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/boost_logo" />
                    <CheckBox
                        android:id="@+id/method_btn_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="0dp"
                        android:padding="@dimen/setting_margin"
                        android:text="@string/boost_method"
                        android:textSize="16dp"
                        android:checked="@{viewModel.method.equals(6)}"
                        android:onClick="@{() -> viewModel.setMethod(6)}"
                        android:textColor="@color/medium_grey"
                        android:layoutDirection="rtl"
                        android:backgroundTint="@color/white" />
                </LinearLayout>
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/method_section_5"/>
                <LinearLayout
                    android:id="@+id/method_section_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/setting_margin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/method_section_5">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:scaleX="1.2"
                        android:scaleY="1.2"
                        android:src="@drawable/credit_card_logo" />
                    <CheckBox
                        android:id="@+id/method_btn_6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="0dp"
                        android:padding="@dimen/setting_margin"
                        android:text="@string/card_method"
                        android:textSize="16dp"
                        android:checked="@{viewModel.method.equals(2)}"
                        android:onClick="@{() -> viewModel.setMethod(2)}"
                        android:textColor="@color/medium_grey"
                        android:layoutDirection="rtl"
                        android:backgroundTint="@color/white" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:id="@+id/confirm_top_uo_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:elevation="50px">
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="15dp"/>
            <TextView
                android:id="@+id/amount_confirm_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/setting_margin"
                android:text="Top-up Amount : RM --"
                android:textColor="@color/medium_grey"/>
            <Button
                android:id="@+id/top_up_now_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/top_up"
                android:layout_marginBottom="25dp"
                android:layout_marginHorizontal="@dimen/setting_margin"
                android:onClick="@{() -> topUpMethodFragment.topUp()}"/>
        </LinearLayout>
        <include
            android:id="@+id/login_progress"
            layout="@layout/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="46dp" />
    </RelativeLayout>
</layout>
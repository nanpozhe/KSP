<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.ksp.presentation.viewmodel.TopUpViewModel" />
        <variable
            name="topUpModalBottomSheetFragment"
            type="com.example.ksp.presentation.ui.wallet.ModalBottomSheetFragment" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/other_amount_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ENTER TOP-UP AMOUNT"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:paddingVertical="@dimen/setting_margin"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/other_amount_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/setting_margin"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="@color/purple_500"
            android:hint="RM 0"
            app:helperText="Minimum is RM5 and maximum is RM200">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/other_amount_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"/>
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/confirm_top_up_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/setting_margin"
            android:layout_marginHorizontal="@dimen/setting_margin"
            android:text="@string/confirm_btn"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_700" />
    </LinearLayout>
</layout>

<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.CouncilFragment">

    <data>
        <variable
            name="councilFragment"
            type="com.example.ksp.presentation.ui.CouncilFragment" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="List of Malaysia States"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_margin="@dimen/setting_margin"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/penang"
            android:drawableEnd="@drawable/round_keyboard_arrow_right_24"
            android:drawableTint="@color/grey"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:elevation="0dp"
            android:onClick="@{() -> councilFragment.toPenangCouncilPage()}"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/perak"
            android:drawableEnd="@drawable/round_keyboard_arrow_right_24"
            android:drawableTint="@color/grey"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:elevation="0dp"
            android:onClick="@{() -> councilFragment.toPerakCouncilPage()}"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/selangor"
            android:drawableEnd="@drawable/round_keyboard_arrow_right_24"
            android:drawableTint="@color/grey"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:elevation="0dp"
            android:onClick="@{() -> councilFragment.toSelangorCouncilPage()}"/>
    </LinearLayout>
</layout>
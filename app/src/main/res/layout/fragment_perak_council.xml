<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.council.PerakCouncilFragment">

    <data>
        <variable
            name="perakCouncilFragment"
            type="com.example.ksp.presentation.ui.council.PerakCouncilFragment" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/setting_margin">
        <TextView
            android:id="@+id/perak_state_title"
            style="@style/Widget.KedahSmartParking.TextView.CouncilTextTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/setting_margin"
            android:text="@string/perak" />
        <RadioGroup
            android:id="@+id/perak_state"
            android:layout_width="match_parent"
            android:layout_height="757dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/penang_state_title">
            <RadioButton
                android:id="@+id/ipoh_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/setting_margin"
                android:layoutDirection="rtl"
                android:text="@string/ipoh" />
            <RadioButton
                android:id="@+id/kampar_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/setting_margin"
                android:layoutDirection="rtl"
                android:text="@string/kampar" />
            <RadioButton
                android:id="@+id/taiping_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/setting_margin"
                android:layoutDirection="rtl"
                android:text="@string/taiping" />
            <RadioButton
                android:id="@+id/manjung_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/setting_margin"
                android:layoutDirection="rtl"
                android:text="@string/manjung" />
            <RadioButton
                android:id="@+id/teluk_intan_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/setting_margin"
                android:layoutDirection="rtl"
                android:text="@string/telukIntan" />
            <RadioButton
                android:id="@+id/batu_gajah_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/setting_margin"
                android:layoutDirection="rtl"
                android:text="@string/batuGajah" />
            <RadioButton
                android:id="@+id/kuala_kangsar_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/setting_margin"
                android:layoutDirection="rtl"
                android:text="@string/kualaKangsar" />
            <RadioButton
                android:id="@+id/gerik_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/setting_margin"
                android:layoutDirection="rtl"
                android:text="@string/gerik" />
            <RadioButton
                android:id="@+id/kerian_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/setting_margin"
                android:layoutDirection="rtl"
                android:text="@string/kerian" />
            <RadioButton
                android:id="@+id/perak_tengah_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/setting_margin"
                android:layoutDirection="rtl"
                android:text="@string/perakTengah" />
            <RadioButton
                android:id="@+id/tanjong_malim_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/setting_margin"
                android:layoutDirection="rtl"
                android:text="@string/tanjongMalim" />
            <RadioButton
                android:id="@+id/tapah_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/setting_margin"
                android:layoutDirection="rtl"
                android:text="@string/tapah" />
            <RadioButton
                android:id="@+id/selama_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/setting_margin"
                android:layoutDirection="rtl"
                android:text="@string/selama" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/confirm_btn"
                android:layout_margin="@dimen/setting_margin"/>
        </RadioGroup>
    </LinearLayout>
</layout>
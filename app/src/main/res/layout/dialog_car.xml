<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.car.DialogCarFragment">

    <data>
        <variable
            name="viewModel"
            type="com.example.ksp.presentation.viewmodel.CarViewModel" />
        <variable
            name="dialogCarFragment"
            type="com.example.ksp.presentation.ui.car.DialogCarFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="450dp">
        <TextView
            android:id="@+id/car_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/car_dialog_title"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/car_plate_button_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/car_plate_layout_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/car_plate_title"
            android:textColor="@color/black"
            android:layout_marginHorizontal="@dimen/car_plate_button_margin"
            android:layout_marginTop="@dimen/setting_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/car_dialog_title"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/car_plate_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/car_plate_hint"
            android:layout_marginHorizontal="@dimen/car_plate_button_margin"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:layout_constraintStart_toStartOf="@id/car_plate_layout_label"
            app:layout_constraintTop_toBottomOf="@id/car_plate_layout_label">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/car_plate_edit_text"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="@color/black"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/car_color_layout_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/car_color_title"
            android:textColor="@color/black"
            android:layout_marginHorizontal="@dimen/car_plate_button_margin"
            android:layout_marginTop="@dimen/setting_margin"
            app:layout_constraintStart_toStartOf="@id/car_plate_layout"
            app:layout_constraintTop_toBottomOf="@id/car_plate_layout"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/car_color_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/car_color_hint"
            android:layout_marginHorizontal="@dimen/car_plate_button_margin"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:layout_constraintStart_toStartOf="@id/car_color_layout_label"
            app:layout_constraintTop_toBottomOf="@id/car_color_layout_label">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/car_color_edit_text"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="@color/black"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/car_brand_layout_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/car_brand_title"
            android:textColor="@color/black"
            android:layout_marginHorizontal="@dimen/car_plate_button_margin"
            android:layout_marginTop="@dimen/setting_margin"
            app:layout_constraintStart_toStartOf="@id/car_color_layout"
            app:layout_constraintTop_toBottomOf="@id/car_color_layout"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/car_brand_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/car_brand_hint"
            android:layout_marginHorizontal="@dimen/car_plate_button_margin"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:layout_constraintStart_toStartOf="@id/car_brand_layout_label"
            app:layout_constraintTop_toBottomOf="@id/car_brand_layout_label">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/car_brand_edit_text"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="@color/black"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/confirm_car_dialog_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/setting_margin"
            android:layout_marginHorizontal="@dimen/setting_margin"
            android:text= "@string/create_car"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple_700"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/car_brand_layout"/>
        <Button
            android:id="@+id/cancel_car_dialog_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/setting_margin"
            android:text="@string/cancel"
            android:textColor="@color/purple_700"
            android:backgroundTint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/confirm_car_dialog_button"/>
        <include
            android:id="@+id/login_progress"
            layout="@layout/progress_bar"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:visibility="invisible" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
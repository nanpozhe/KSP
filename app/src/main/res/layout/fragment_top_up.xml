<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.wallet.TopUpFragment">

    <data>
        <variable
            name="viewModel"
            type="com.example.ksp.presentation.viewmodel.TopUpViewModel" />
        <variable
            name="topUpFragment"
            type="com.example.ksp.presentation.ui.wallet.TopUpFragment" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/wallet_balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Balance: --"
                android:textColor="@color/white"
                android:paddingVertical="12dp"
                android:textAlignment="center"
                android:background="@color/purple_500"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/select_amount_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_top_up_amount"
                android:textColor="@color/medium_grey"
                android:fontFamily="sans-serif-condensed-medium"
                android:textSize="12sp"
                android:paddingVertical="10dp"
                app:layout_constraintStart_toStartOf="@id/top_up_amount_section"
                app:layout_constraintTop_toBottomOf="@id/wallet_balance"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/top_up_amount_section"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/select_amount_text"
                app:layout_constraintEnd_toEndOf="parent">
                <Button
                    android:id="@+id/amount_btn_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    android:text="@string/rm5"
                    android:textColor="@color/light_grey"
                    android:onClick="@{() -> viewModel.setAmount(5)}"
                    style="?attr/materialButtonOutlinedStyle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <Button
                    android:id="@+id/amount_btn_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    android:layout_marginStart="40dp"
                    android:text="@string/rm10"
                    android:textColor="@color/light_grey"
                    android:onClick="@{() -> viewModel.setAmount(10)}"
                    style="?attr/materialButtonOutlinedStyle"
                    app:layout_constraintStart_toEndOf="@id/amount_btn_1"
                    app:layout_constraintTop_toTopOf="parent" />
                <Button
                    android:id="@+id/amount_btn_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    android:layout_marginStart="40dp"
                    android:text="@string/rm20"
                    android:textColor="@color/light_grey"
                    android:onClick="@{() -> viewModel.setAmount(20)}"
                    style="?attr/materialButtonOutlinedStyle"
                    app:layout_constraintStart_toEndOf="@id/amount_btn_2"
                    app:layout_constraintTop_toTopOf="parent" />
                <Button
                    android:id="@+id/amount_btn_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    android:text="@string/rm50"
                    android:textColor="@color/light_grey"
                    android:onClick="@{() -> viewModel.setAmount(50)}"
                    style="?attr/materialButtonOutlinedStyle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/amount_btn_1" />
                <Button
                    android:id="@+id/amount_btn_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    android:layout_marginStart="40dp"
                    android:text="@string/rm100"
                    android:textColor="@color/light_grey"
                    android:onClick="@{() -> viewModel.setAmount(100)}"
                    style="?attr/materialButtonOutlinedStyle"
                    app:layout_constraintStart_toEndOf="@id/amount_btn_4"
                    app:layout_constraintTop_toBottomOf="@id/amount_btn_2" />
                <Button
                    android:id="@+id/amount_btn_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="0dp"
                    android:layout_marginStart="40dp"
                    android:text="@string/other_amount"
                    android:textColor="@color/light_grey"
                    style="?attr/materialButtonOutlinedStyle"
                    app:layout_constraintStart_toEndOf="@id/amount_btn_5"
                    app:layout_constraintTop_toBottomOf="@id/amount_btn_3" />
            </androidx.constraintlayout.widget.ConstraintLayout>
<!--            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/other_amount_section"

<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.TopUpFragment">

    <data>
        <variable
            name="viewModel"
            type="com.example.ksp.presentation.viewmodel.TopUpViewModel" />
        <variable
            name="topUpFragment"
            type="com.example.ksp.presentation.ui.TopUpFragment" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/wallet_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Balance: --"
            android:textColor="@color/white"
            android:paddingVertical="12dp"
            android:textAlignment="center"
            android:background="@color/purple_500"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/select_amount_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_top_up_amount"
            android:textColor="@color/medium_grey"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="12sp"
            android:paddingVertical="10dp"
            app:layout_constraintStart_toStartOf="@id/top_up_amount_section"
            app:layout_constraintTop_toBottomOf="@id/wallet_balance"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top_up_amount_section"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/select_amount_text"
            app:layout_constraintEnd_toEndOf="parent">
            <Button
                android:id="@+id/amount_btn_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:text="@string/rm5"
                android:textColor="@color/light_grey"
                android:onClick="@{() -> viewModel.setAmount(5)}"
                style="?attr/materialButtonOutlinedStyle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <Button
                android:id="@+id/amount_btn_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:layout_marginStart="40dp"
                android:text="@string/rm10"
                android:textColor="@color/light_grey"
                android:onClick="@{() -> viewModel.setAmount(10)}"
                style="?attr/materialButtonOutlinedStyle"
                app:layout_constraintStart_toEndOf="@id/amount_btn_1"
                app:layout_constraintTop_toTopOf="parent" />
            <Button
                android:id="@+id/amount_btn_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:layout_marginStart="40dp"
                android:text="@string/rm20"
                android:textColor="@color/light_grey"
                android:onClick="@{() -> viewModel.setAmount(20)}"
                style="?attr/materialButtonOutlinedStyle"
                app:layout_constraintStart_toEndOf="@id/amount_btn_2"
                app:layout_constraintTop_toTopOf="parent" />
            <Button
                android:id="@+id/amount_btn_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:text="@string/rm50"
                android:textColor="@color/light_grey"
                android:onClick="@{() -> viewModel.setAmount(50)}"
                style="?attr/materialButtonOutlinedStyle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/amount_btn_1" />
            <Button
                android:id="@+id/amount_btn_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:layout_marginStart="40dp"
                android:text="@string/rm100"
                android:textColor="@color/light_grey"
                android:onClick="@{() -> viewModel.setAmount(100)}"
                style="?attr/materialButtonOutlinedStyle"
                app:layout_constraintStart_toEndOf="@id/amount_btn_4"
                app:layout_constraintTop_toBottomOf="@id/amount_btn_2" />
            <Button
                android:id="@+id/amount_btn_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:layout_marginStart="40dp"
                android:text="@string/other_amount"
                android:textColor="@color/light_grey"
                style="?attr/materialButtonOutlinedStyle"
                app:layout_constraintStart_toEndOf="@id/amount_btn_5"
                app:layout_constraintTop_toBottomOf="@id/amount_btn_3" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/choose_method_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_top_up_method"
            android:textColor="@color/medium_grey"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="12sp"
            android:paddingVertical="10dp"
            android:layout_marginTop="@dimen/setting_margin"
            app:layout_constraintStart_toStartOf="@id/top_up_method_section"
            app:layout_constraintTop_toBottomOf="@id/top_up_amount_section"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top_up_method_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/choose_method_text"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageButton
                android:id="@+id/method_btn_1"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:elevation="0dp"
                android:src="@drawable/grabpay_logo"
                android:scaleType="centerCrop"
                android:checked="@{viewModel.method.equals(4)}"
                android:onClick="@{() -> viewModel.setMethod(4)}"
                style="?attr/materialButtonOutlinedStyle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/method_btn_1_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/method_btn_1"
                android:text="@string/grabpay_method"
                app:layout_constraintStart_toStartOf="@id/method_btn_1"
                app:layout_constraintEnd_toEndOf="@id/method_btn_1"
                app:layout_constraintTop_toBottomOf="@id/method_btn_1"/>
            <ImageButton
                android:id="@+id/method_btn_2"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:elevation="0dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/touch_n_go_ewallet"
                android:scaleType="centerCrop"
                android:checked="@{viewModel.method.equals(1)}"
                android:onClick="@{() -> viewModel.setMethod(1)}"
                style="?attr/materialButtonOutlinedStyle"
                app:layout_constraintStart_toEndOf="@id/method_btn_1"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/method_btn_2_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/method_btn_2"
                android:text="@string/tng_method"
                app:layout_constraintStart_toStartOf="@id/method_btn_2"
                app:layout_constraintEnd_toEndOf="@id/method_btn_2"
                app:layout_constraintTop_toBottomOf="@id/method_btn_2"/>
            <ImageButton
                android:id="@+id/method_btn_3"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:elevation="0dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/boost_logo"
                android:scaleType="centerCrop"
                android:checked="@{viewModel.method.equals(6)}"
                android:onClick="@{() -> viewModel.setMethod(6)}"
                style="?attr/materialButtonOutlinedStyle"
                app:layout_constraintStart_toEndOf="@id/method_btn_2"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/method_btn_3_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/method_btn_3"
                android:text="@string/boost_method"
                app:layout_constraintStart_toStartOf="@id/method_btn_3"
                app:layout_constraintEnd_toEndOf="@id/method_btn_3"
                app:layout_constraintTop_toBottomOf="@id/method_btn_3"/>
            <ImageButton
                android:id="@+id/method_btn_4"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:elevation="0dp"
                android:src="@drawable/fpx_logo"
                android:scaleType="centerCrop"
                android:background="@drawable/image_button_border"
                android:checked="@{viewModel.method.equals(3)}"
                android:onClick="@{() -> viewModel.setMethod(3)}"
                style="?attr/materialButtonOutlinedStyle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/method_btn_1_label" />
            <TextView
                android:id="@+id/method_btn_4_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/method_btn_4"
                android:text="@string/fpx_method"
                app:layout_constraintStart_toStartOf="@id/method_btn_4"
                app:layout_constraintEnd_toEndOf="@id/method_btn_4"
                app:layout_constraintTop_toBottomOf="@id/method_btn_4"/>
            <ImageButton
                android:id="@+id/method_btn_5"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:elevation="0dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/shopee_pay_logo"
                android:scaleType="fitCenter"
                android:checked="@{viewModel.method.equals(5)}"
                android:onClick="@{() -> viewModel.setMethod(5)}"
                style="?attr/materialButtonOutlinedStyle"
                app:layout_constraintStart_toEndOf="@id/method_btn_4"
                app:layout_constraintTop_toBottomOf="@id/method_btn_2_label" />
            <TextView
                android:id="@+id/method_btn_5_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/method_btn_5"
                android:text="@string/shopeepay_method"
                app:layout_constraintStart_toStartOf="@id/method_btn_5"
                app:layout_constraintEnd_toEndOf="@id/method_btn_5"
                app:layout_constraintTop_toBottomOf="@id/method_btn_5"/>
            <ImageButton
                android:id="@+id/method_btn_6"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:elevation="0dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/credit_card_logo"
                android:scaleType="fitCenter"
                android:checked="@{viewModel.method.equals(2)}"
                android:onClick="@{() -> viewModel.setMethod(2)}"
                style="?attr/materialButtonOutlinedStyle"
                app:layout_constraintStart_toEndOf="@id/method_btn_5"
                app:layout_constraintTop_toBottomOf="@id/method_btn_3_label" />
            <TextView
                android:id="@+id/method_btn_6_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/method_btn_6"
                android:text="@string/card_method"
                app:layout_constraintStart_toStartOf="@id/method_btn_6"
                app:layout_constraintEnd_toEndOf="@id/method_btn_6"
                app:layout_constraintTop_toBottomOf="@id/method_btn_6"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <Button
            android:id="@+id/top_up_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginHorizontal="@dimen/setting_margin"
            android:text="@string/top_up"
            app:layout_constraintTop_toBottomOf="@id/top_up_method_section"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <Button
            android:id="@+id/cancel_top_up_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/setting_margin"
            android:text="@string/cancel"
            android:textColor="@color/purple_700"
            android:backgroundTint="@color/white"
            app:layout_constraintTop_toBottomOf="@id/top_up_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>